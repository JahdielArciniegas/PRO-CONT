---
import {
  SignedIn,
  SignedOut,
  SignInButton,
  UserButton,
} from "@clerk/astro/components";
---

<section
  class="w-full h-screen bg-[var(--background)] flex flex-col items-center justify-center"
>
  <h1 class="text-8xl font-bold">
    <span class="text-green-600">PRO</span>/<span class="text-red-500"
      >CONT</span
    >
  </h1>
  <p class="text-xl w-96 text-center">
    App para facilitar la toma de decisiones a traves de un comparativa de pros
    y contras
  </p>
  <SignedOut>
    <SignInButton
      mode="modal"
      class="p-2 rounded-lg bg-[var(--primary)] text-white cursor-pointer"
    >
      Comienza Ahora
    </SignInButton>
  </SignedOut>
  <SignedIn>
    <UserButton showName={true} />
    <a href="/dashboard">
      <button
        class="p-2 rounded-lg bg-[var(--primary)] text-white cursor-pointer"
      >
        Entrar a Dashboard
      </button>
    </a>
  </SignedIn>
</section>

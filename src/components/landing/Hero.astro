---
import {
  SignedIn,
  SignedOut,
  SignInButton,
  UserButton,
} from "@clerk/astro/components";
import { Button } from "../ui/button";
---

<section
  class="relative w-full h-screen flex flex-col items-center justify-center gap-4"
>
  <h1 class="sm:text-8xl text-6xl font-bold">
    <span class="text-green-600">PRO</span>/<span class="text-red-500"
      >CONT</span
    >
  </h1>
  <p class="text-xl w-96 text-center">
    App para facilitar la toma de decisiones a traves de un comparativa de pros
    y contras
  </p>
  <SignedOut>
    <SignInButton
      mode="modal"
      class="cursor-pointer p-2 rounded-lg bg-primary text-primary-foreground hover:bg-primary/90"
    >
      Comienza Ahora
    </SignInButton>
  </SignedOut>
  <SignedIn>
    <a href="/dashboard">
      <Button className="cursor-pointer"> Entrar a Dashboard </Button>
    </a>
  </SignedIn>
  <span
    class="absolute bottom-0 left-0 h-full w-10/12 bg-gradient-to-tr from-green-500/80 via-transparent to-transparent -z-10"
  ></span>
  <span
    class="absolute bottom-0 right-0 h-full w-10/12 bg-gradient-to-tl from-red-500/80 via-transparent to-transparent -z-10"
  ></span>
</section>

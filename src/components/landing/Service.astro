---
import { CheckIcon, XIcon } from "lucide-react";
---

<section
  id="service"
  class="relative w-full h-screen flex flex-col items-center justify-center gap-4"
>
  <h2 class="text-6xl">Nuestro Servicio</h2>
  <div
    class="flex gap-4 justify-between bg-background p-4 rounded-lg shadow-2xl"
  >
    <div class="flex flex-col items-center w-52 gap-4">
      <h4 class="text-2xl text-green-600">Pros</h4>
      <ul class="flex-1 min-h-[150px] flex flex-col justify-around">
        <li class="flex gap-2 items-center">
          <CheckIcon className="text-green-600" />
          Facilidad de uso
        </li>
        <li class="flex gap-2 items-center">
          <CheckIcon className="text-green-600" />
          Interfaz intuitiva
        </li>
        <li class="flex gap-2 items-center">
          <CheckIcon className="text-green-600" />
          Mejora la toma de decisiones
        </li>
      </ul>
    </div>
    <span class="w-0.5 h-96 bg-black"></span>
    <div class="flex flex-col items-center w-52 gap-4">
      <h4 class="text-2xl text-red-500">Contras</h4>
      <ul class="flex-1 min-h-[150px] flex flex-col justify-around">
        <li class="flex gap-2 items-center">
          <XIcon className="text-red-500" />
          Tendras mas tiempo para ti :c
        </li>
        <li class="flex gap-2 items-center">
          <XIcon className="text-red-500" />
          Ninguna
        </li>
        <li class="flex gap-2 items-center">
          <XIcon className="text-red-500" />
          Otra vez ninguna
        </li>
      </ul>
    </div>
  </div>
  <span
    class="absolute bottom-0 left-0 h-full w-10/12 bg-gradient-to-br from-green-500/80 via-transparent to-transparent -z-10"
  ></span>
  <span
    class="absolute bottom-0 right-0 h-full w-10/12 bg-gradient-to-bl from-red-500/80 via-transparent to-transparent -z-10"
  ></span>
</section>

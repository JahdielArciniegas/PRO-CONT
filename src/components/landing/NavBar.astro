---
import { ModeToggle } from "../common/ModeToggle";
import { Button } from "../ui/button";
import {
  SignInButton,
  SignedIn,
  SignedOut,
  UserButton,
} from "@clerk/astro/components";
import { DoorOpen, LockOpen } from "lucide-react";
---

<nav
  class="fixed top-0 w-full h-16 bg-muted text-primary flex justify-around items-center z-50"
>
  <div class="flex gap-2 sm:gap-4 items-center">
    <ModeToggle client:load />
    <h1 class="hidden sm:block">PRO/CONT</h1>
    <h1 class="block sm:hidden">P/C</h1>
  </div>
  <ul class="flex gap-1 sm:gap-4">
    <li>
      <Button variant="link" className="cursor-pointer  hover:text-primary/90"
        ><a href="#service">Servicio</a></Button
      >
    </li>
    <!-- <li>
      <Button variant="link" className="cursor-pointer  hover:text-primary/90"
        ><a href="#pricing">Precios</a></Button
      >
    </li> -->
    <li>
      <Button variant="link" className="cursor-pointer  hover:text-primary/90"
        ><a href="#contact">Contacto</a>
      </Button>
    </li>
    <SignedOut>
      <SignInButton
        mode="modal"
        class="flex cursor-pointer p-2 rounded-lg bg-primary text-primary-foreground hover:bg-primary/90 gap-1 items-center"
      >
        <LockOpen className="size-5" />
        <p class="hidden sm:block">Comienza Ahora</p>
      </SignInButton>
    </SignedOut>
    <SignedIn>
      <UserButton />
      <a href="/dashboard">
        <Button className="cursor-pointer flex gap-1 items-center">
          <DoorOpen />
          <p class="hidden sm:block">Entrar a Dashboard</p>
        </Button>
      </a>
    </SignedIn>
  </ul>
</nav>
